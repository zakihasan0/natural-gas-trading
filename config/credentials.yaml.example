# Natural Gas Trading System Credentials
# IMPORTANT: This is a template file. Copy to credentials.yaml and fill with your actual credentials.
# NEVER commit credentials.yaml to version control.

# API Keys
api_keys:
  eia:
    api_key: 'YOUR_EIA_API_KEY'
  
  noaa:
    token: 'YOUR_NOAA_TOKEN'
  
  alpha_vantage:
    api_key: 'YOUR_ALPHA_VANTAGE_KEY'

# Database Credentials (if applicable)
database:
  host: 'localhost'
  port: 5432
  username: 'postgres'
  password: 'YOUR_PASSWORD'
  database_name: 'natural_gas_trading'

# Trading Account (if applicable)
trading_account:
  broker: 'interactive_brokers'  # Options: interactive_brokers, tws, alpaca, etc.
  account_id: 'YOUR_ACCOUNT_ID'
  api_key: 'YOUR_API_KEY'
  secret_key: 'YOUR_SECRET_KEY'
  is_paper_trading: true  # Set to false for live trading

# Notification Services (optional)
notifications:
  email:
    smtp_server: 'smtp.gmail.com'
    smtp_port: 587
    username: 'your.email@gmail.com'
    password: 'YOUR_APP_PASSWORD'
  
  slack:
    webhook_url: 'YOUR_SLACK_WEBHOOK_URL' 